{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build Lox",
			"command": "/usr/bin/clang",
			"args": [
				"lib/*.c",
				"main.c",
				"-o",
				"${workspaceFolder}/build/lox"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "Build Lox Tests",
			"command": "/usr/bin/clang",
			"args": [
				"src/lib/*.c",
				"tests/*.c",
				"-iquote",
				"src/lib",
				"-o",
				"build/tests/testLox"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "shell",
			"label": "Run Lox Tests",
			"command": "${workspaceFolder}/build/tests/testLox",
			"dependsOn": [
				"Build Lox Tests"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run Lox",
			"command": "${workspaceFolder}/build/lox",
			"dependsOn": [
				"Build Lox"
			]
		}
	]
}